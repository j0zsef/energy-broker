{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "importHelpers": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2022",
    "types": ["node"]
  },
  "exclude": [
    "**/node_modules",
    "**/tmp",
    "**/dist",
    "**/*.yaml",
    "node_modules/**"
  ]
}
