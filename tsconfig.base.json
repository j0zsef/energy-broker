{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": ["es2020", "dom"],
    "rootDir": ".",
    "sourceMap": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "@./backend": ["libs/backend/src/index.ts"],
      "@./green-button-client": ["libs/services/green-button-client/src/index.ts"],
      "@./libs": ["libs/src/index.ts"],
      "@./shared": ["libs/shared/src/index.ts"]
    }
  },
  "exclude": ["**/node_modules", "**/tmp"]
}
